{% extends 'base.html.twig' %}

{% block title %}Ajout d'une Recette{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="example-wrapper">
    <h1>AJOUTER DES RECETTES</h1>
        
    <div class="form-add-recipe" style="color: white">
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'placeholder': 'Nom', 'class' : 'form-input-recipe'} })  }}
        {{ form_row(form.description, {'attr': {'placeholder': 'Description', 'class' : 'form-input-recipe', 'rows' : '1'} })  }}
        {{ form_row(form.instruction, {'attr': {'placeholder': 'Instructions' , 'class' : 'form-input-recipe', 'rows' : '1'} })  }}
        {{ form_row(form.preparationTime, {'attr': {'placeholder': 'Temps en minutes' , 'class' : 'form-input-recipe'} }) }} 
        {{ form_row(form.level, {'attr': {'placeholder': 'Niveau' , 'class' : 'form-input-recipe'} })  }}
        {{ form_row(form.pictures, {'attr': {'class' : 'form-input-recipe'} }) }}
        {{ form_row(form.totalPrice, {'attr': {'placeholder': 'Prix (â‚¬)' , 'class' : 'form-input-recipe'} })  }}

        <input type="submit" class="ajout-recipe-button" style="text-align: center" value="AJOUTER">
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

    