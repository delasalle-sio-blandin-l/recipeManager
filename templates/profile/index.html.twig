{% extends 'base.html.twig' %}

{% block title %}Votre Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <h3>Bienvenue sur votre profil {{ app.user.username }}</h3>

    <div class="affichage-pseudo">
        <p>Votre nom d'utilisateur : {{ app.user.username }} </p>
        <a class="modif-username" href="/profile/updateUsername">Modifier</a>
    </div>

    <div class="affichage-password">
        <p>Votre mot de passe : {{ app.user.password }} </p>
    </div>
</div>
{% endblock %}
