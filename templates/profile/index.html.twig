{% extends 'base.html.twig' %}

{% block title %}Votre Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# Barre de navigation avec les onglets #}
<nav class="navbar">
    <ul class="nav-list">
        <li class="nav-link"><a href="/">Accueil</a></li>
        <li class="nav-link"><a href="/ingredient">Mes ingr√©dients</a></li>
        <li class="nav-link"><a href="/profile">Mon profil</a></li>
        <li class="nav-link"><a href="{{ path('logout') }}">Logout</a></li>
    </ul>
</nav>

<div class="example-wrapper">
    <h3>Bienvenue sur votre profil {{ app.user.username }}</h3>

    <div class="affichage-pseudo">
        <p>Votre nom d'utilisateur : {{ app.user.username }} </p>
        <a class="modif-username" href="/profile/updateUsername">Modifier</a>
    </div>

    <div class="affichage-password">
        <p>Votre mot de passe : {{ app.user.password }} </p>
        <a class="modif-password" href="/profile/updatePwd">Modifier</a>
    </div>
</div>
{% endblock %}
