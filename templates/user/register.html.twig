{% extends 'base.html.twig' %}

{% block title %}Register Page{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error { color:red }
</style>

<div class="example-wrapper">
    <h1>Register page</h1>
    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}

    <form action="{{ path('register') }}" method="POST">

        <input type="text" name="_email" value="{{ last_username }}" placeholder="Email here ....">

        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username here ....">

        <input type="password" name="_password">

        <button type="submit">Register</button>
    </form>
</div>
{% endblock %}
